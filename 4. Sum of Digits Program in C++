//Sum of Digits Program in C++
#include<iostream>
using namespace std;
int main()
{
    int n, sum = 0, digit;
    cout <<"Enter a multiple digit number: ";
    cin>>n;
    while(n != 0)
        {
            digit = n % 10; //Extract the last digit
            sum = sum + digit; //Add last digit to sum
            n = n / 10; //Remove the last digit
        }
        cout<<"Sum of digits: "<<sum;
    }
